<tr>
	<td data-th="Price per pallet per week (£)" class="input-field no-success-validation-style">
		<input data-loom-type="decimal" data-loom-decimal-places="2" required type="number" name="price" data-bind-value="price"/>
	</td>
	<td data-th="Handling charge per pallet (In and Out) (£)" class="input-field no-success-validation-style">
		<input data-loom-type="decimal" data-loom-decimal-places="2" data-bind-value="charge" name="charge" type="number" required/>
	</td>
	<td data-th="Cost to reserve (£)" class="input-field no-success-validation-style">
		<input data-loom-type="decimal" data-loom-decimal-places="2" data-bind-value="reserve" name="reserve" type="number"/>
	</td>
</tr>
	