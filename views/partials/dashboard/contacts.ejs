<div data-view="contacts" class="dashboard-container columns nine" style="display:none">
	<div class="secondary content-box">
		<div class="header">
			<h3>contacts</h3>
		</div>
		<div class="main">
			<section class="tabs">
				<ul class="tab-links tabs two-tabs">
					<li class="active"><a href="#master-contacts">Master Contacts</a></li>
					<li><a href="#warehouse-contacts">Warehouse Contacts</a></li>
				</ul>
			</section>
			<div class="tab-content">
				<div data-contact-type="master-contacts" id="master-contacts" class="tab active main">
					<table class="simple dashboard-table">
						<thead>
							<tr>
								<th>No.</th>
								<th>Name</th>
								<th>Email</th>
								<th>Phone Number</th>
								<th>Register Status</th>
								<th><img src="./images/delete.png"/></th>
							</tr>
						</thead>
						<tbody>
							<%for(var i = 0; i<masterContacts.length; i++){%>
								<tr>
									<td><%=i+1%>*</td>
									<td data-field="name"><%=masterContacts[i].name%></td>
									<td data-field="email"><%=masterContacts[i].email%></td>
									<td data-field="phone-number"><%=masterContacts[i].phoneNumber%></td>
									<td><div class="registered-status complete"></div></td>
									<td data-field="delete"><input type="checkbox" name="delete-contact"/></td>
								</tr>
							<%}%>
						</tbody>
					</table>
					<button type="button" name="save-new-contacts" class="button action">Save</button>
					<label for="add-new-contact">Add new contact</label>
					<button type="button" name="add-new-contact" class="add-button"></button>
				</div>
				<div id="warehouse-contacts" class="tab main">
					<p>Please select your warehouse</p>
					<select name="warehouses" class="columns four">
						<%for(i = 0; i<warehouses.length; i++){%>
							<option data-id="<%=warehouses[i]._id%>"><%=warehouses[i].name%></option>
						<%}%>
					</select>
					<button name="view-warehouse-contacts" class="action mini columns two">View</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/template" id="master-contacts-row">
	<tr data-status="new">
		<td></td>
		<td data-field="name"><input type="text" name="name"/></td>
		<td data-field="email"><input type="email" name="email"/></td>
		<td data-field="phone-number"><input type="tel" name="phone-number"/></td>
		<td><div class="registered-status pending"></div></td>
		<td data-field="delete"><input type="checkbox" name="delete-contact"/></td>
	</tr>
</script>