<div data-view="contacts" class="dashboard-container columns nine" style="display:none">
	<div class="secondary content-box">
		<div class="header">
			<h3>contacts</h3>
		</div>
		<div class="main">
			<section class="tabs">
				<ul class="tab-links tabs two-tabs">
					<a href="#master-contacts"><li class="active">Company Master Contacts</li></a>
					<a href="#warehouse-contacts"><li>Warehouse Contacts</li></a>
				</ul>
			</section>
			<div class="tab-content">
				<div data-contact-type="master-contacts" id="master-contacts" class="tab active main">
					<table class="simple dashboard-table">
						<thead>
							<tr>
								<th>No.</th>
								<th>Name</th>
								<th>Email</th>
								<th>Phone Number</th>
								<th>Registered?</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<%for(var i = 0; i<masterContacts.length; i++){%>
								<tr data-user-id="<%=masterContacts[i]._id.toString()%>">
									<td><%=i+1%>*</td>
									<td data-field="name"><%=masterContacts[i].name%></td>
									<td data-field="email"><%=masterContacts[i].email%></td>
									<td data-field="phone-number"><%=masterContacts[i].phoneNumber%></td>
									<td data-field="register-status">
										<%switch(true){
											case (masterContacts[i].expiry >= Date.now() && masterContacts[i].expiry !== null):%>
												<p class="registered-status pending"><%=registerStatus[0]%></p>
												<%break;
											case (masterContacts[i].expiry < Date.now() && masterContacts[i].expiry !== null):%>
												<p class="registered-status expired"><%=registerStatus[2]%></p>
												<%break;
											case null:%>
												<p class="registered-status complete"><%=registerStatus[1]%></p>
												<%break;
											default:%>
												<p class="registered-status complete"><%=registerStatus[1]%></p>
										<%}%>
									</td>
									<td data-field="resend-email"><%if(masterContacts[i].expiry < Date.now() && masterContacts[i].expiry !== null){%> <button name="resend-email" class="button action mini">Resend</button><%}%></td>
								</tr>
							<%}%>
						</tbody>
					</table>
					<div class="columns twelve button-container">
						<button type="button" name="save-new-contacts" class="button action">Save</button>
						<div id="add-new-contact-container">
							<label for="add-new-contacts">Add new contact</label>
							<button type="button" name="add-new-contact" class="add-button"></button>
						</div>
					</div>
				</div>
				<% include ../../partials/dashboard/warehouse-dropdown-list%>
			</div>
		</div>
	</div>
	<%if(warehouses.length === 1){%>
		<% include ../../partials/dashboard/warehouse-specific-contacts%>
	<%}%>
</div>
<script type="text/template" id="master-contacts-row">
	<tr data-status="new">
		<td></td>
		<td data-field="name"><input type="text" name="name"/></td>
		<td data-field="email"><input type="email" name="email"/></td>
		<td data-field="phone-number"><input type="tel" name="phone-number"/></td>
		<td data-field="register-status"><div class="registered-status pending"></div></td>
		<td data-field="delete"><input type="checkbox" name="delete-contact"/></td>
	</tr>
</script>