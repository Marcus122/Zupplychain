 <% include ./partials/top%>   
 <%
    var session = { whSC : { sc : "" } };
    session.whSC.sc = [quote.search];
    var warehouse = quote.warehouse;
    session.whSC.sc[0].startDate = session.whSC.sc[0].startDate.toISOString();
    var minDurationOptions = config.minDurationOptions;
    var temperatures = config.temperatures;
    var palletTypes = config.palletTypes;
    warehouse.useageProfile = quote.search.useageProfile;
    warehouse.storageProfile = quote.storageProfile;
 %>
	<main class="warehouse-profile quote-request">
		<div class="banner">
			<h1>Storage Quotation</h1>
		</div>
		<section>
            <input type="hidden" name="warehouse-id" id="warehouse-id" value="<%=warehouse._id%>" />
			<div class="main">
				<div class="content-box primary">
					<div class="header">
						<h2>Review and Accept Payment Terms - <%=warehouse.name %>, <%= warehouse.postcode %></h2>
					</div>
                    <div class="main quote-request-summary">
                        <div class="content-box search-criteria-summary">
                            <div class="header">
                                <h2>Search Criteria</h2>
                            </div>
                            <div class="main">
                                <div class="row">
                                    <div class="columns two">
                                    <span>Target Postcode/City</span>
                                    <em class="search-value"><%=session.whSC.sc[0].postcode%></em> 
                                    </div>
                                    <div class="columns two">
				    <span>Max Distance (miles)</span>
                                    <em class="search-value"><%=session.whSC.sc[0].maxDistance%></em> 
                                    </div>
                                    <div class="columns two">
				    <span>  Pallet Type</span>
					<% if(session.whSC.sc[0].palletType){%>
                                           <em class="search-value"><%=session.whSC.sc[0].palletType%></em>
                                       <%}else{%>
                                           <em class="search-value">Any</em>
                                      <%}%>
                                    </div>
				    <div class="columns two">
				      <span>Qty</span>
                                      <em class="search-value"><%=session.whSC.sc[0].totalPallets%></em> 
				    </div>
                                    <div class="columns two">
				      <span>Product Description</span>
                                      <em class="search-value"><%=session.whSC.sc[0].description%></em> 
                                    </div>
                                    <div class="columns two">
                                    <span>Start Date</span>
				    <em class="search-value"><%=session.whSC.sc[0].startDate.substring(8,10)%>/<%=session.whSC.sc[0].startDate.substring(5,7)%>/<%=session.whSC.sc[0].startDate.substring(0,4)%></em> 
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="columns two">
				     <span>Minimum Duration</span>
                                    <em><%=minDurationOptions[parseInt(session.whSC.sc[0].minDuration,10)]%></em> 
                                    </div>
                                    <div class="columns two">
				      <span>Pallet Height (m)</span>
				      <em class="search-value"><%=session.whSC.sc[0].height%></em> 
                                    </div>
                                    <div class="columns two">
				      <span>Pallet Weight (kg)</span>
			            <em class="search-value"><%=session.whSC.sc[0].weight%></em> 
                                    </div>
				    <div class="columns two">
				      <span>Type</span>
                                      <em class="search-value"><%=temperatures[session.whSC.sc[0].temp]%></em> 
				    </div>
                                </div>
                            </div>
                        </div>
			<div class="warehouse-pricing">
                        <% var quoteView = true; %>
                        <%= include ./partials/warehouse-pricing %>
			</div>

                        <form class="loom-form row" action="/provider-offer-reply" id="provider-offer-reply-form">
                                <div class="input-field" style="display:none">
				      <input type="hidden" name="quoteId" value="<%= quote._id %>" />
				  </div>
                        <div class="content-box">
                            <div class="header">
                                <h2>Offer Details</h2>
                            </div>
                            <div class="main row">
                                   <div class="six columns">
                                       <h3>Payment Type Accepted</h3>
                                       <p>Payment accepted by <%= config.paymentTypes[quote.offerData.paymentType] %>
                                        
                                    </div>
                                    <div class="six columns">
                                        <div class="input-field">
                                            <h3>Payment Terms</h3>
                                            <p>Payment to be made within <%= config.paymentTerms[quote.offerData.paymentTerms]%>
                                        </div>
                                        <div class="input-field check checkbox">
                                            <label for="terms">I accept the above payment terms<input type="checkbox" name="terms" id="terms" required="required"/></label>
                                        </div>
                                    </div>
                            </div>
                            
                       
                        </div>
                        <div class="content-box action row">
                            <div class="eight columns">
                                <p>Press the ACCEPT button to accept the supplier's payment terms. You will be notified by email when the supplier confirms the contract.</p> 
                            </div>
                            <div class="four columns submit-request-container">
                                <button type="submit" class="button action large">ACCEPT
                                </button>
                            </div>
                          
                        </div>
                         </form>
                    </div>
				</div>
			</div>
		</section>
	</main>
    
 <% include ./partials/bottom%>
 
